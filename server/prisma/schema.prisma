datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt  DateTime   @default(now())
  firstName  String?
  id         String     @id @default(cuid())
  lastName   String?
  likedSongs Song[]
  password   String
  playlists  Playlist[]
  roles      String[]
  updatedAt  DateTime   @updatedAt
  username   String     @unique
}

model Song {
  album      Album[]
  artist     Artist[]
  createdAt  DateTime   @default(now())
  id         String     @id @default(cuid())
  inPlaylist Playlist[]
  likedBy    User[]
  origin     Origin?    @relation(fields: [originId], references: [id])
  originId   String?
  title      String?
  updatedAt  DateTime   @updatedAt
}

model Album {
  artist      Artist?  @relation(fields: [artistId], references: [id])
  artistId    String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  imagePath   String?
  songs       Song[]
  title       String?
  updatedAt   DateTime @updatedAt
}

model Artist {
  albums    Album[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  imagePath String?
  name      String?
  songs     Song[]
  updatedAt DateTime @updatedAt
}

model Playlist {
  createdAt   DateTime @default(now())
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdById String?
  description String?
  id          String   @id @default(cuid())
  songs       Song[]
  title       String?
  updatedAt   DateTime @updatedAt
}

model Origin {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  imagePath   String?
  name        String?
  songs       Song[]
  updatedAt   DateTime @updatedAt
}